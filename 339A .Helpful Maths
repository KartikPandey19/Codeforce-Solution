import java.io.*;
import java.util.*;


public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        String sum1 = sc.next();
        sum1  = sum1.replace("+", "");
        char []ns = sum1.toCharArray();
        Arrays.sort(ns);

        for(int i = 0; i < sum1.length(); i++) {
            System.out.print(ns[i]);
           if(i==sum1.length()-1){
               continue;
           }
            System.out.print("+");
        }
        }
    }


